{
  "name": "snipboard",
  "version": "1.4.0",
  "author": "Your Name <you@example.com>",
  "description": "Local clip + screenshot board with sections (tabs).",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "test:extension": "jest --runInBand tests/content-selectors.test.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "ci-test": "echo 'Skipping electron UI in CI'",
    "build": "electron-builder --win --x64"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "build": {
    "appId": "com.snipboard.app",
    "productName": "SnipBoard",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!{dist,release}/**",
      "!tests/**",
      "!scripts/**",
      "!**/*.spec.*",
      "!**/*.test.*",
      "!README.md",
      "!.git/**",
      "!node_modules/.cache/**",
      "!**/*.log"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "SnipBoardExtension/icons/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SnipBoard"
    }
  }
}
