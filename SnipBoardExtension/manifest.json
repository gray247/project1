{
  "manifest_version": 3,
  "name": "SnipBoard ChatGPT Saver",
  "version": "0.2.0",
  "description": "Select ChatGPT messages and send them directly into SnipBoard.",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://chatgpt.com/g/*",
    "https://chatgpt.com/c/*",
    "http://127.0.0.1:4050/*"
  ],

  "action": {
    "default_title": "Save to SnipBoard",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chatgpt.com/g/*",
        "https://chatgpt.com/c/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
